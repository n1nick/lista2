#include <stdio.h>

int main() { 
  float notas[4];
  float media = 0;

  for (int i = 0; i < 4; i++) {
    printf("Insira suas 4 notas: ");
    scanf("%f", &notas[i]);

    media += notas[i];
  }

  media = media / 4;
  
  if (media >= 9) {
    printf("APROVADO!\n");
  } else if (media >= 7.5) {
    printf("APROVADO!\n");
  } else if (media >= 6.5) {
    printf("APROVADO!\n");
  } else if (media >= 4.0) {
    printf("REPROVADO!\n");
  } else {
    printf("REPROVADO!\n");
  }
  
  return 0;
}
